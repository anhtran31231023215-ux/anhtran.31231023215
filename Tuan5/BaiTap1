<script>
  $(function () {
    // đổi ảnh lớn khi click thumbnail
    $('.pm-thumb').on('click', function () {
      var bigSrc = $(this).data('big');
      $('#pm-main-img-1').attr('src', bigSrc);
      $(this).addClass('active').siblings('.pm-thumb').removeClass('active');
    });

    // chọn size
    $('.pm-size-btn').on('click', function () {
      if ($(this).hasClass('disabled')) return;
      $('.pm-size-btn').removeClass('active');
      $(this).addClass('active');
    });

    // chọn màu (đơn giản chỉ highlight ô)
    $('.pm-color-option').on('click', function () {
      $('.pm-color-option').removeClass('active');
      $(this).addClass('active');
    });
  });
</script>

